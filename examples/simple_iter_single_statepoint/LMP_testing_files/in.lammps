units           real        
newton          on     
atom_style      molecular # No charges as in full      
atom_modify     sort 0 0.0 

#### Neighbor list setup ####

neighbor        1.0 bin
neigh_modify    delay 0 every 1 check yes

#### Specify NB model/parameters and read in data file

pair_style   lj/smooth 5.0 7.0 # Parameters are dist to start smoothing and outer cutoff
read_data    data.propane_box
pair_coeff   1 1 0.2 3.75

#### Specify bonded model/parameters

bond_style      harmonic          # morse
bond_coeff      1 350.0 1.54

angle_style     harmonic
angle_coeff     1 75.0 120.0

dihedral_style  none
improper_style  none

#### Initiate dynamics and set i/o

timestep        0.05

velocity        all create 500.0 1111 loop all mom yes rot yes dist gaussian

fix             1 all nvt temp 500.0 500.0 20.0
#fix_modify      1 energy yes      # Convert etotal to conserved quantity (add thermostat contributions)

dump            1 all custom 1000 traj.lammpstrj id mol element xu yu zu fx fy fz
dump_modify     1 element C

dump            2 all custom 100 traj.2000.lammpstrj id mol element xu yu zu fx fy fz
dump_modify     2 element C


thermo_style    custom step time ke pe epair evdwl ebond eangle edihed eimp emol etotal # ecouple econserve 
thermo_modify   line one format float %20.5f flush yes
thermo          1000

run             200000


